Config { font = "-*-Fixed-Bold-R-Normal-*-13-*-*-*-*-*-*-*"
       , bgColor = "black"
       , fgColor = "grey"
       , position = TopW L 99
       , commands = [ Run StdinReader
                    , Run Locks
                    , Run Weather "SBBE" ["-t","<tempC>C <windMs>m/s <skyCondition>",
                                          "-L","64",
                                          "-H","77",
                                          "--normal","green",
                                          "--high","red",
                                          "--low","lightblue"] 18000
                    , Run Network "wlo1"  ["-t","<dev>: <rx>k <tx>k"] 12
                    , Run Wireless "wlo1" ["-t","(<quality>%)",
                                           "-L","0",
                                           "-H","32",
                                           "--low","red",
                                           "--normal","yellow",
                                           "--high","green"] 12
                    , Run Cpu ["-L","3",
                               "-H","50",
                               "--normal","green",
                               "--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>% <usedbar>",
                                  "--low","green",
                                  "--normal","yellow",
                                  "--high","red"] 10
                    , Run BatteryP ["BAT0"]
                                    ["-t", "Bat: <acstatus><left>% (<timeleft>)",
                                    "-L", "10",
                                    "-H", "80",
                                    "-p", "3",
                                    "--", 
                                    "-i", "",
                                    "-L", "-15",
                                    "-H", "-5",
                                    "-l", "red",
                                    "-m", "yellow",
                                    "-h", "white"] 100
                    , Run Volume "default" "Master" ["-t","Vol: <volume>% <volumebar>",
                                                     "-H","80",
                                                     "-L","15",
                                                     "--low","lightblue",
                                                     "--normal","grey",
                                                     "--high","red"] 20
                    , Run Brightness ["-t","Bright: <percent>%", 
                                      "--", "-D","intel_backlight"] 15
                    , Run Date "%a %d %b %T (%U)" "date" 10
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ [%locks%] | %cpu% | %memory% | %wlo1% %wlo1wi% | %battery% | %bright% | <fc=#ee9a00>%date%</fc> | %default:Master% | %SBBE% | Cassio Batista"
       }
